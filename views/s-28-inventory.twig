{% extends "base.html" %}

{% block title %}S-28{% endblock %}

{% block content %}
  {% if msg %}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <strong>Whoops!</strong> {{ msg }}.
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  {% elseif cupboard %}
      <div class="dropdown">
      <a class="btn btn-outline-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
             Cupboard {{ cupboard }}
      </a>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        <a class="dropdown-item" href="?cupboard=1">
          Cupboard 1
        </a>
        <a class="dropdown-item" href="?cupboard=2">
          Cupboard 2
        </a>
        <a class="dropdown-item" href="?cupboard=3">
          Cupboard 3
        </a>
        <a class="dropdown-item" href="?cupboard=4">
          Cupboard 4
        </a>
        <a class="dropdown-item" href="?cupboard=5">
          Cupboard 5
        </a>
        <a class="dropdown-item" href="?cupboard=6">
          Cupboard 6
        </a>
        <a class="dropdown-item" href="?cupboard=7">
          Cupboard 7
        </a>
        </div>
    </div>

    <ul class="list-group">
      {% for publication in publications %}
        <li class="list-group-item">
          
              {% block movementHistory %}
              <a data-toggle="collapse" href="#collapse-{{ publication.recID }}" role="button" aria-expanded="false" aria-controls="collapse-{{ publication.recID }}"ic-get-from="s-28-history.php?recID={{ publication.recID}}" ic-target="#monthlyMovements-{{ publication.recID}}">
              {% endblock %}
              {{ publication.title }}
              </a><span class="badge badge-light"> {{ publication.symbol }}</span>   
           
            <div class="float-right" id="requested-{{ publication.recID }}">
              {% block onHand %}{{ publication.onHand }}{% endblock %}
            </div>

            <br><small class="text-muted">{% block note %}{% endblock %}</small>

          <div class="collapse" id="collapse-{{ publication.recID }}">
            <div>
               {% block onHandForm %}{% endblock %}
            </div>
            
          


            <!-- order more -->
            <div id="monthlyMovements-{{ publication.recID}}">
            </div>
          </div>

        </li>
      {% endfor %}
    </ul>

    {% else %}
      <ul class="list-group">
        <li class="list-group-item">
          <a href="?cupboard=1">
          Cupboard 1
          </a>
        </li>
        <li class="list-group-item">
          <a href="?cupboard=2">
          Cupboard 2
          </a>
        </li>
        <li class="list-group-item">
          <a href="?cupboard=3">
          Cupboard 3
          </a>
        </li>
        <li class="list-group-item">
          <a href="?cupboard=4">
          Cupboard 4
          </a>
        </li>
        <li class="list-group-item">
          <a href="?cupboard=5">
          Cupboard 5
          </a>
        </li>
        <li class="list-group-item">
          <a href="?cupboard=7">
          Cupboard 7
          </a>
        </li>
      </ul>
    {% endif %}

{% endblock %}

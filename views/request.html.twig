{% extends "base.html" %}

{% block title %}Request Literature{% endblock %}

{% block content %}
  <div class="container">
    <h5 class="my-3">Request Literature</h5>
  </div>  
    <ul class="list-group">
      {% for publication in publications %}
        <li class="list-group-item">

          <div class="row">
            <div class="col-9">
              <a data-toggle="collapse" href="#collapse-{{ publication.recID }}" role="button" aria-expanded="false" aria-controls="collapse-{{ publication.recID }}" ic-get-from="monthlyMovementHistory.php?recID={{ publication.recID}}" ic-target="#monthlyMovements-{{ publication.recID}}">
                {{ publication.title }}
              </a>
              <span class="badge badge-light"> {{ publication.symbol }}</span><br>
              <small>Proposed <span class="badge badge-warning">{{ publication.proposed }}</span></small>
              </p>
            </div>
            <div class="col-3" id="requested-{{ publication.recID }}">
              <form ic-post-to="update-requested.php" ic-target="#requested-{{ publication.recID }}">
                <input type="hidden" name="recID" value="{{ publication.recID }}">
                <input type="text" class="form-control" name="requested" value="{{ publication.requested }}" style="width: 4rem; text-align: right">
              </form>
            </div>
          </div>
 
          <div class="collapse" id="collapse-{{ publication.recID }}">
            <div id="monthlyMovements-{{ publication.recID}}">
            </div>
          </div>

        </li>
      {% endfor %}
    </ul>
{% endblock %}

